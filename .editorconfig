# TalkLess Project - EditorConfig
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C++ source files
[*.{cpp,h,hpp,c}]
indent_size = 4

# QML files
[*.qml]
indent_size = 4

# JavaScript
[*.js]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CMake files
[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Batch files (Windows)
[*.bat]
end_of_line = crlf
indent_size = 4

# Property list files
[*.plist]
indent_size = 2
